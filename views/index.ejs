<%- include('header') %>
<div  class="container">
    <div class="row">
        <div class="col-lg-12">
        <div class="table-responsive">
            
 
<table class="table table-striped table-primary">
    <thead>
      <tr>
        <th>Store Name</th>
        <th>Logo</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      
      <% locals.data.forEach(function(row){ %>
      <tr>
        <td><%= row.storeName %></td>
        <td> <img height="50px" width="50px" src="data:image/png;base64, 
            <%=row?.image?.toString('base64')%>"></td>
        <td><%= row.status %></td>
        <td>
            <a href="/edit/<%= row._id %>"  class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
            <a href="/delete/<%= row._id %>"  class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
        </td>
      </tr>
      <% })%>
    </tbody>
  </table>
        </div>
        </div>
    </div>
</div>
<%- include('footer') %>